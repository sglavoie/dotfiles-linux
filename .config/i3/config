new_window pixel 5
new_float normal
default_floating_border pixel 5

# Hide borders
hide_edge_borders smart

# change borders
bindsym $mod+Shift+n   border none
bindsym $mod+n         border pixel 5
bindsym $mod+y         border normal 5

